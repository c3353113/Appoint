<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Appoint.MainPage"
             Title="">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Appoint"
                FontSize="50"

                WidthRequest="200"/>

            <Button
                x:Name="BookingButton"
                Text="My Appointments"
                Clicked="onAppointmentButtonClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
